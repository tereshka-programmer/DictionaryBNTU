<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edtEnWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:minHeight="48dp"
        android:hint="English word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtRuWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Russian word"
        app:layout_constraintEnd_toEndOf="@+id/edtEnWord"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtEnWord"
        app:layout_constraintTop_toBottomOf="@+id/edtEnWord" />

    <EditText
        android:id="@+id/edtChWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Chinesse word"
        app:layout_constraintEnd_toEndOf="@+id/edtRuWord"
        app:layout_constraintStart_toStartOf="@+id/edtRuWord"
        app:layout_constraintTop_toBottomOf="@+id/edtRuWord" />

    <EditText
        android:id="@+id/edtChTranscrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:hint="Chinesse transcription"
        app:layout_constraintEnd_toEndOf="@+id/edtChWord"
        app:layout_constraintStart_toStartOf="@+id/edtChWord"
        app:layout_constraintTop_toBottomOf="@+id/edtChWord" />

</androidx.constraintlayout.widget.ConstraintLayout>